@model IReadOnlyCollection<assessmentTwoProject_VV.Models.Member.Details>

@{
    ViewData["Title"] = "Member Details";
}
<div class=" p-1 m-0 text-dark" style="background-color: rgba(255,255,255, 0.95); border-radius: 15px; border: solid 2px #808080; color: #504f54;">
    <div class="m-3 table-responsive">
        <h2>@ViewData["Title"]</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        DOB
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                <tr>
                    <td>
                        @member.Name
                    </td>
                    <td>
                        @member.Surname
                    </td>
                    <td>
                        @member.DOB.Date.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @member.Email
                    </td>
                    <td>
                        @member.PhoneNumber
                    </td>
                    <td>
                        <a id="editButton" asp-area="" asp-controller="Member" asp-action="Add" asp-route-id="@member.Id">Edit</a>
                        <a id="deleteButton" asp-area="" asp-controller="Member" asp-action="Confirm" asp-route-id="@member.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
