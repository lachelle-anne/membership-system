@model assessmentTwoProject_VV.Models.Member.Details

    <div class=" p-1 m-0 text-dark" style="background-color: rgba(255,255,255, 0.95); border-radius: 15px; border: solid 2px #808080;color: #504f54;">
        <div class="m-3">
            <h1>Are you sure you want to delete this Person?</h1>

            <form asp-action="Delete" asp-route-id="@Model.Id">
                <div>
                    <div class="form-group">
                        <label asp-for="Name"><b>First Name: </b> @Model.Name</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname"><b>Surname: </b> @Model.Surname</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="DOB"><b>DOB: </b> @Model.DOB.Date.ToString("dd/MM/yyyy")</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><b>Email: </b> @Model.Email</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"><b>Phone: </b> @Model.PhoneNumber</label>
                    </div>
                    <input type="submit" value="Delete" class="btn btn-danger mt-4" style="color:#fff" />
                </div>
            </form>
        </div>
    </div>
